<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.right.vivo.data.school.SchoolMapper">
    <select id="searSchoolByForm" resultMap="University"></select>
    <select id="selectUniversityById" resultMap="University">
        select * from vivo.university where vivo.university.id=#{universityId}
    </select>
    <select id="selectMajorsByUniId" resultMap="Major">
        select * from vivo.major where vivo.major.university_id=#{universityId}
    </select>
    <select id="selectMajorById" resultMap="Major">
        select * from major where major.id=#{majorId}
    </select>
    <resultMap id="University" type="com.right.vivo.po.University">
    </resultMap>
    <resultMap id="Major" type="com.right.vivo.po.Major">
        <result column="university_id" property="universityId"></result>
        <result column="url" property="logoUrl"></result>
    </resultMap>
</mapper>